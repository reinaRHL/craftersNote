    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageTask">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
